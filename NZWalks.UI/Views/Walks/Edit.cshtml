@model NZWalks.UI.Models.DTO.WalkDto
@{
}


<h1>Edit Walk</h1>

@if (Model is not null)
{
    <form method="post" class="mt-3">
        <div class="mt-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>

        <div class="mt-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" asp-for="Name" />
        </div>

        <div class="mt-3">
            <label class="form-label">Description</label>
            <input type="text" class="form-control" asp-for="Description" />
        </div>

        <div class="mt-3">
            <label class="form-label">Length in Kilometers</label>
            <input type="text" class="form-control" asp-for="LengthInKm" />
        </div>

        <div class="mt-3">
            <label class="form-label">Difficulty</label>
            <select asp-for="Difficulty.Id">
                @foreach (var difficulty in ViewBag.Difficulties)
                {
                    <option value="@difficulty.Id">@difficulty.Name</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Region</label>
            <select asp-for="Region.Id">
                @foreach (var region in ViewBag.Regions)
                {
                    <option value="@region.Id">@region.Name</option>
                }
            </select>
        </div>

        <div class="mt-3">
            <label class="form-label">Image URL</label>
            <input type="text" class="form-control" asp-for="WalkImageUrl" />
        </div>

        <div class="mt-3 d-flex justify-content-between">
            <button type="submit" class="btn btn-primary">Save</button>

            <button type="submit"
                    asp-controller="Walks"
                    asp-action="Delete"
                    class="btn btn-danger">
                Delete
            </button>
        </div>
    </form>
}
