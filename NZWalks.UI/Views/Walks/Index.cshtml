@model IEnumerable<NZWalks.UI.Models.DTO.WalkDto>
@{
}

<h1 class="mt-3">Walks</h1>

@if (User.Identity.IsAuthenticated)
{
    <div class="d-flex justify-content-end">
        <a class="btn btn-secondary" asp-controller="Walks" asp-action="Add">Add Walk</a>
    </div>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Length (in Km)</th>
                <th>Region</th>
                <th>Difficulty</th>
                <th> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var walk in Model)
            {
                <tr>
                    <td>@walk.Id</td>
                    <td>@walk.Name</td>
                    <td>@walk.Description</td>
                    <td>@walk.LengthInKm</td>
                    <td>@walk.Region.Name</td>
                    <td>@walk.Difficulty.Name</td>
                    <td>
                        <a asp-controller="Walks" asp-action="Edit" asp-route-id="@walk.Id"
                           class="btn btn-light">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
} else
{
    <p>You are not logged in. Please <a href="/Auth/SignIn">login</a> to access more features.</p>
}
